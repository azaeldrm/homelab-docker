# EZCopper Configuration Template
# Copy to .env and fill in your values
MODE=bootstrap

# Discord Channel URLs (comma-separated)
BLACKLIST_CHANNEL_URLS=
WHITELIST_CHANNEL_URLS=

# Polling and timing
POLL_INTERVAL_SECONDS=1
CONFIRM_FINAL_ORDER=false
DRY_RUN=false

# TIMEOUT_* = max wait (proceeds immediately when ready)
TIMEOUT_MS_PAGE_LOAD=8000
TIMEOUT_MS_ELEMENT_VISIBLE=5000
TIMEOUT_MS_SELECTOR_CHECK=100
TIMEOUT_MS_AOD_PANEL=3000
TIMEOUT_MS_CHECKOUT_LOAD=15000
TIMEOUT_SECONDS_ORDER_CONFIRM=15

# WAIT_* = fixed sleep (always waits full duration)
WAIT_SECONDS_DYNAMIC_CONTENT=1.0
WAIT_SECONDS_CART_UPDATE=1.0
WAIT_SECONDS_CHECKOUT_TRANSITION=1.5

# Retry settings
MAX_RETRIES=2
DELAY_SECONDS_RETRY=0.3

# Docker settings
STOP_GRACE_PERIOD=30s

# Display for VNC
DISPLAY=:99